            android:layout_weight="1"
            android:onClick="onTabSelect"
            android:text="tab-bar5"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="normal"
            android:visibility="gone" />
</LinearLayout>

